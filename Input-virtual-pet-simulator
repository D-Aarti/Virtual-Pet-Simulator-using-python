import time

class VirtualPet:
    def __init__(self, name):
        self.name = name
        self.hunger = 50
        self.happiness = 50

    def feed(self):
        print(f"You feed {self.name}.")
        self.hunger -= 10
        self.happiness += 5
        self._status_check()

    def play(self):
        print(f"You play with {self.name}.")
        self.happiness += 10
        self.hunger += 5
        self._status_check()

    def status(self):
        print(f"\n{self.name}'s Status:")
        print(f"Hunger: {self.hunger}")
        print(f"Happiness: {self.happiness}\n")

    def _status_check(self):
        self.hunger = max(0, min(100, self.hunger))
        self.happiness = max(0, min(100, self.happiness))
        if self.hunger >= 80:
            print(f"{self.name} is very hungry! ğŸ–")
        if self.happiness <= 20:
            print(f"{self.name} feels sad. ğŸ˜¢")
        if self.happiness >= 80:
            print(f"{self.name} is super happy! ğŸ‰")

def main():
    pet_name = input("What would you like to name your pet? ğŸ¶: ")
    pet = VirtualPet(pet_name)

    while True:
        print("\nWhat would you like to do?")
        print("1. Feed")
        print("2. Play")
        print("3. Check Status")
        print("4. Exit")

        choice = input("Enter your choice: ")
        if choice == "1":
            pet.feed()
        elif choice == "2":
            pet.play()
        elif choice == "3":
            pet.status()
        elif choice == "4":
            print(f"Goodbye! {pet.name} will miss you. ğŸ¾")
            break
        else:
            print("Invalid choice. Try again.")

        time.sleep(1)

if __name__ == "__main__":
    main()
